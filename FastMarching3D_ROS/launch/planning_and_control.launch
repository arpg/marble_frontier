<?xml version="1.0" encoding="UTF-8"?>

<launch>

    <arg name="enable_traversability" default="true" />
    <arg name="resolution" default="0.2" />
    <arg name="vehicle_name" default="H01" />
    <arg name="fixed_frame" value="$(arg vehicle_name)/map"/>
    <arg name="robot_frame" value="$(arg vehicle_name)/base_link"/>

    <include file="$(find marble_frontier_guidance)/launch/guidance.launch"/>
    <!-- <include file="$(find receding_horizon_stitcher)/launch/stitcher.launch"/> -->
    <include file="$(find ground_finder)/launch/traversability_mapping.launch" unless="$(arg enable_traversability)">
        <arg name="resolution" value="$(arg resolution)"/>
    </include>
    <include file="$(find ground_finder)/launch/traversability_to_edt.launch" if="$(arg enable_traversability)">
        <arg name="resolution" value="$(arg resolution)"/>
        <arg name="fixed_frame" value="$(arg fixed_frame)"/>
        <arg name="robot_frame" value="$(arg robot_frame)"/>
        <arg name="octomap_topic" value="octomap_full"/>
    </include>
    <include file="$(find msfm3d)/launch/msfm3d.launch">
        <arg name="resolution" value="$(arg resolution)"/>
    </include>
    <include file="$(find msfm3d)/launch/costmap_generator.launch">
        <arg name="resolution" value="$(arg resolution)"/>
    </include>

</launch>
